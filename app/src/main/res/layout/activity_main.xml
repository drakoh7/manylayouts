<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.alexandr.pc.manylayouts.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="111dp"
        android:layout_height="48dp"
        android:layout_marginRight="136dp"
        android:layout_marginTop="365dp"
        android:text="О программе"
        android:onClick="onClick"
        android:textAllCaps="false"
        android:id="@+id/buttonTo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="136dp" />

    <Button
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="137dp"
        android:layout_marginBottom="189dp"
        android:text="@string/birthday_name"
        android:textAllCaps="false"
        android:layout_marginStart="137dp"
        android:id="@+id/buttonBirthday"/>

    <EditText
        android:id="@+id/editTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:minWidth="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/To"
        app:layout_constraintLeft_toLeftOf="@+id/editTo"
        app:layout_constraintBottom_toTopOf="@+id/editTo"/>

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/editTo"
        app:layout_constraintTop_toBottomOf="@+id/textDescription"
        />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Description"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/editTo"
        app:layout_constraintTop_toBottomOf="@+id/editTo"/>

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editDescription"
        app:layout_constraintLeft_toLeftOf="@+id/editDescription"
        android:text="Отправить"/>

</android.support.constraint.ConstraintLayout>
